[user]
	name = Kumazawa
	email = dev@rakuweb.jp

; [url "github:"]
    ; InsteadOf = https://github.com/
    ; InsteadOf = git@github.com:

[includeIf "gitdir:~/github/rakuweb/"]
  path = ~/.gitconfig_rakuweb

[includeIf "gitdir:~/github/snowhite/"]
  path = ~/.gitconfig_rakuweb

[core]
	editor = nvim
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[merge]
	tool = nvimdiff
[mergetool "nvimdiff"]
  cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\""

[commit]
	template = ~/.commit_template
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
