{
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  },
  "suggest.floatEnable": true,
  "suggest.detailField": "menu",
  "suggest.removeDuplicateItems": true,
  "suggest.enablePreview": false,
  "suggest.disableKind": false,
  "suggest.disableMenu": false,
  "suggest.localityBonus": true,
  "suggest.echodocSupport": true,
  "tsserver.enableJavascript": true,
  "python.jediEnabled": false,
  "python.venvFolders": ["envs", ".pyenv", ".direnv", ".venv"],
  "eslint.autoFixOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "go",
    "python",
    "prisma",
    "dart",
    "html",
    "graphql"
  ],
  "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "go.goplsOptions": {
    "gofumpt": true
  },
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",
  "explorer.keyMappings.global": {
    "i": false, // cancel default mapkey

    "*": "toggleSelection",
    "<tab>": "actionMenu",

    "gk": "expandablePrev",
    "gj": "expandableNext",
    "h": "collapse",
    "l": ["expandable?", "expand", "open"],
    "J": ["toggleSelection", "normal:j"],
    "K": ["toggleSelection", "normal:k"],
    "gl": "expand:recursive",
    "gh": "collapse:recursive",
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "o": ["expanded?", "collapse", "expand"],
    "<cr>": ["expandable?", "cd", "open"],
    "e": "open",
    "s": "open:split",
    "E": "open:vsplit",
    "t": "open:tab",
    "<bs>": "gotoParent",
    "gs": "reveal:select",
    "gp": "preview:labeling",

    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "X": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "[i": "indentPrev",
    "]i": "indentNext",

    "[m": "indexPrev:modified",
    "]m": "indexNext:modified",

    "[d": "indexPrev:diagnosticError:diagnosticWarning",
    "]d": "indexNext:diagnosticError:diagnosticWarning",
    "[D": "indexPrev:diagnosticError",
    "]D": "indexNext:diagnosticError",

    "[c": "indexPrev:git",
    "]c": "indexNext:git",
    "<<": "gitStage",
    ">>": "gitUnstage"
  }
}
